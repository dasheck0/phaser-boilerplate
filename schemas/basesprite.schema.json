{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/basesprite.schema.json",
  "title": "Base Sprite",
  "description": "A sprite, which acts as a static image.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "description": "The type of sprite.",
      "type": "string",
      "enum": ["BaseSprite"]
    },
    "options": {
      "required": ["key", "position", "group"],
      "additionalProperties": false,
      "properties": {
        "key": {
          "type": "string"
        },
        "position": {
          "type": "object",
          "required": ["x", "y"],
          "additionalProperties": false,
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "relative": {
              "type": "boolean"
            }
          }
        },
        "anchor": {
          "type": "object",
          "required": ["x", "y"],
          "additionalProperties": false,
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            }
          }
        },
        "group": {
          "type": "string"
        }
      }
    }
  }
}
