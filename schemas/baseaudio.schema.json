{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/baseaudio.schema.json",
  "title": "Base Audio",
  "description": "A gameobject that plays some music",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "type": "string",
      "enum": ["BaseAudio"]
    },
    "options": {
      "required": ["key"],
      "additionalProperties": false,
      "properties": {
        "key": {
          "type": "string"
        },
        "loop": {
          "type": "boolean"
        }
      }
    }
  }
}
